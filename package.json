{
  "name": "peer-lite",
  "description": "Lightweight WebRTC browser library that supports video, audio and data channels",
  "version": "2.0.0-beta.0",
  "license": "MIT",
  "keywords": [
    "audio",
    "p2p",
    "peer",
    "peer lite",
    "peer-to-peer",
    "stream",
    "video",
    "voice",
    "webrtc",
    "webrtc stream"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "prebuild": "rimraf -rf dist/*",
    "build": "rollup --config build/rollup.config.ts --configPlugin typescript",
    "test": "yarn test:playwright && yarn test:jest",
    "test:playwright": "playwright test ./test/peer.spec.ts",
    "test:jest": "jest",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext .tsx --ext .ts --ext .js"
  },
  "dependencies": {},
  "peerDependencies": {},
  "devDependencies": {
    "@playwright/test": "^1.22.2",
    "@rollup/plugin-typescript": "^8.3.2",
    "@swc/core": "^1.2.194",
    "@swc/jest": "^0.2.21",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@types/webrtc": "^0.0.32",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.4.6",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-playwright": "^0.9.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "jest": "^28.1.0",
    "playwright": "^1.22.2",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.0",
    "rollup-plugin-swc": "^0.2.1",
    "typescript": "^4.7.2"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "modulePathIgnorePatterns": [
      "./test/peer.spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": ["@swc/jest"]
    }
  }
}
